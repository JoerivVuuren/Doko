<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/activityBackground"
    android:id="@+id/contentFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="20dp"
        android:id="@+id/linearLayout2">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:onClick="LogOutUser"
            android:id ="@+id/login_button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="My Profile"
            android:onClick="OpenProfileScreen"
            android:id ="@+id/profile_button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tic Tac Toe"
            android:onClick="OpenTicTacToe"
            android:id ="@+id/ttt_button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Send a game request"
            android:onClick="SendGameRequest"
            android:id ="@+id/game_req_button" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Register device for parse push"
            android:onClick="RegisterPush"
            android:id ="@+id/reg_push_button"
            android:singleLine="false" />
    </LinearLayout>

</RelativeLayout>