<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="nl.uva.kite.Doko.Settings">
    <Button
        android:id="@+id/change_pic_button"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_add_credit"
        android:onClick="onClickChooseImage"
        android:text="Change profile picture"
        android:layout_above="@+id/logout_button"
        android:layout_alignLeft="@+id/logout_button"
        android:layout_alignStart="@+id/logout_button"
        android:layout_marginBottom="40dp" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_add_credit"
        android:onClick="LogOutUser"
        android:text="Logout"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="92dp" />
</RelativeLayout>
