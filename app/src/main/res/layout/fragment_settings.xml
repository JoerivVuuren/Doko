<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context="nl.uva.kite.Doko.Settings">
    <Button
        android:id="@+id/change_pic_button"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_add_credit"
        android:onClick="onClickChooseImage"
        android:text="Change profile picture"
        android:layout_marginBottom="19dp"
        android:layout_above="@+id/logout_button"
        android:layout_alignLeft="@+id/logout_button"
        android:layout_alignStart="@+id/logout_button" />

    <Button
        android:id="@+id/logout_button"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_add_credit"
        android:onClick="LogOutUser"
        android:text="Logout"
        android:layout_marginBottom="39dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/imageView2"
        android:src="@drawable/bg_settings"
        android:alpha="0.1"
        android:layout_above="@+id/change_pic_button"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="55dp" />
</RelativeLayout>
