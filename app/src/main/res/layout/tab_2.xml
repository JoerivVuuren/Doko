<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/activityBackground">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/scrollView">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:divider="#000000"
        android:dividerPadding="1dp">

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:elevation="4dp"
            android:layout_marginBottom="5dp"
            android:background="#ffffff"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ffffff">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:id="@+id/profile_pic"
                        android:layout_height="90dp"
                        android:background="#ffff"
                        android:showDividers="beginning|end">
                        <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/aka"
                        android:layout_marginLeft="16dp"
                        android:layout_marginTop="10dp"
                        />

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingBottom="0dp"
                            android:layout_marginLeft="10dp">

                            <TextView
                                android:id="@+id/me_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceMedium"
                                android:text="Username"
                                android:layout_centerVertical="true"
                                android:textColor="@color/tabTextColor"
                                android:layout_centerHorizontal="true"
                                android:textSize="20dp"
                                android:textStyle="bold"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="5dp"
                                android:textIsSelectable="false" />

                        </LinearLayout>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"></TableRow>
                    </TableRow>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="0dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:elevation="4dp"
                android:layout_marginBottom="5dp"
                android:background="#ffffff"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="5dp">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Game Requests"
                        android:textStyle="bold"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/game_request_string" />
                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="?android:attr/listDivider"/>

                    <ListView
                        android:id="@+id/game_request_list"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:dividerHeight="0dp"
                        android:focusable="true" />
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="You have no pending game requests"
                        android:layout_gravity="center_horizontal"
                        android:textColor="@color/pFullLightGreen"
                        android:textSize="14sp"
                        android:id="@+id/empty_game_request"
                        android:gravity="center_horizontal"
                        android:visibility="gone"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></LinearLayout>
        </LinearLayout>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:elevation="4dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">


            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Credit Requests"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/credit_request_string" />
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:background="?android:attr/listDivider"/>
                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

            <ListView
                android:id="@+id/credit_request_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:dividerHeight="0dp"
                android:focusable="true"
                android:headerDividersEnabled="false"
                android:footerDividersEnabled="false" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="You have no pending credit requests"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@color/pFullLightGreen"
                                    android:textSize="14sp"
                                    android:id="@+id/empty_credit_request"
                                    android:gravity="center_horizontal"
                                    android:visibility="gone"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"/>
                            </TableRow>
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:background="?android:attr/listDivider"/>


                            <Button
                                android:id="@+id/btnAddCredit"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:textColor="#ffffff"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/btn_add_credit"
                                android:onClick="AddCredit"
                                android:text="Add Credit"
                                android:layout_marginTop="5dp" />
                        </LinearLayout>
                    </TableRow>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:elevation="4dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

            <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp">

                        <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Debit Requests"
                                android:layout_marginBottom="5dp"
                                android:layout_marginTop="5dp"
                                android:textStyle="bold"
                                android:layout_marginLeft="10dp"
                                android:id="@+id/debit_request_string" />
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:background="?android:attr/listDivider"/>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal">

                                <ListView
                                    android:id="@+id/debit_request_list"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:dividerHeight="0dp"
                                    android:focusable="true" />
                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="You have no pending debit requests"
                                    android:layout_gravity="center_horizontal"
                                    android:textColor="@color/pFullLightGreen"
                                    android:textSize="14sp"
                                    android:id="@+id/empty_debit_request"
                                    android:gravity="center_horizontal"
                                    android:visibility="gone"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"/>
                            </TableRow>
                            <View
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"
                                android:background="?android:attr/listDivider"/>
                            <Button
                                android:id="@+id/btnAddDebit"
                                android:layout_width="180dp"
                                android:layout_height="wrap_content"
                                android:textColor="#ffffff"
                                android:layout_gravity="center_horizontal"
                                android:background="@drawable/btn_add_debit"
                                android:onClick="AddDebit"
                                android:text="Add Debit"
                                android:layout_marginTop="5dp" />
                        </LinearLayout>
                    </TableRow>

                </LinearLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="0dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:elevation="4dp"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="My History"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"/>
            <View
                android:layout_width="fill_parent"
                android:layout_height="1dp"
                android:background="?android:attr/listDivider"/>

            <ListView
                android:id="@+id/me_history_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:dividerHeight="0dp"
                android:focusable="true" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="You have no previous debts to track!"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/pFullLightGreen"
                android:textSize="14sp"
                android:id="@+id/empty_history"
                android:gravity="center_horizontal"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
        </LinearLayout>
        </RelativeLayout>
        </android.support.v7.widget.CardView>

    </LinearLayout>


    </ScrollView>


</RelativeLayout>